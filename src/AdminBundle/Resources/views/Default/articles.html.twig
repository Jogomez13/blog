{% extends "AdminBundle:Default:admin.html.twig"%}
     {%block style %}
{#Ici je vais rajouter les css qui s'appliquent uniquement à la page articles  #}
        {%endblock%}
        
            {%block nav %}
                <li class="nav-item active">
                    <a class="nav-link" href="{{path("add")}}">Ajouter un article</a></li>
                <li class="nav-item">
                    <a class="nav-link" href="{{path("brouillons")}}">Voir {%if app.user.roles[0] == "ROLE_ADMIN"%}les {%else%}mes {%endif%}brouillons</a></li>
                <li class="nav-item">
                    <a class="nav-link" href="{{path("profil")}}">Voir profil</a></li>
                <li class="nav-item">
                    <a class="nav-link" href="{{path("admin")}}">Retour sur la page d'admin</a></li>
                <li class="nav-item">
                    <a class="nav-link" href="{{path("accueil")}}">Retour sur le site</a></li>
              {%endblock%}
    
    {% block articles %}
            
        <h1 class="titradmin">Articles</h1>
        <!--Ci dessous je récupère les articles publiés-->
        {% for news in listNews%}
            {%if news.etatpublication == "publie"%}
                
                        <div class="container-fluid liste">
                            
                                    <div class="thumbnail col-sm-8 col-sm-offset-2 col-xs-10 col-xs-offset-1">
                                        
                                        <h3>Titre</h3><p>{{news.titre}}</p>
                                        <h3>Image</h3><p>{{news.image}}</p>
                                        <h3>Article</h3><p>{{news.article}}</p>
                                        <h3>Auteur</h3><p>{{news.auteur}}</p>
                                        <h3>Date</h3><p>{{news.date|date("m/d/Y")}}</p>
                                        <h3>Catégorie</h3><p>{{news.categorie}}</p>
                                        <h3>Etat de la publication</h3><p>{{news.etatpublication}}</p>
                                        
                                    </div>
                                </div>
                           
                               {%if app.user.roles[0] == "ROLE_ADMIN"%}
                                   
                            <div class="col-xs-12 col-sm-6 col-md-6 col-md-offset-3 btn">
                                <a class="modif" href="{{path("modif",{"id":news.id})}}">Modifier un article</a>
                                <a class="supp" href="{{path("supp",{"id":news.id})}}">Supprimer un article</a>
                            </div>
                        </div>
                        {%endif%}
                                {%endif%}
                                    {% endfor %}


                       

                        {% endblock %}
