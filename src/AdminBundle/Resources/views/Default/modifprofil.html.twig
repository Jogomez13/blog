{%block nav %}
    <li class="nav-item active">
        <a class="nav-link" href="{{path("admin")}}">{%if app.user.username is defined%}
            Bienvenue {{app.user.pseudo}}</a></li>
            {%endif%}
        <li class="nav-item">
            <a class="nav-link" href="{{path("add")}}">Ajouter une article</a></li>
        <li class="nav-item">
            <a class="nav-link" href="{{path("articles")}}">Voir les articles</a></li>

        <li class="nav-item">
            <a class="nav-link" href="{{path("profil")}}">Voir mon profil</a></li>
        <li class="nav-item">
            <a class="nav-link" href="{{path("brouillons")}}">Voir {%if app.user.roles[0] == "ROLE_ADMIN"%}les {%else%}mes {%endif%}brouillons</a></li>
