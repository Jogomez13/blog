            {%endblock%}

            {% block articles %}

                <h1 class="titradmin">Modifiez votre profil</h1>

                <div id="mdp" style="display: none">{{app.user.password}}</div>

                <div id="modifmdp">

                    <h2>Modifiez votre mot de passe</h2>    
                    <p>Entrez votre mot de passe actuel</p>
                    <input class="motdepasse" id="mdpactu" type="password" placeholder="Mot de passe actuel">
                    <p>Nouveau de passe</p>
                    <input class="motdepasse" id="mdpnew" type="password" placeholder="Nouveau mot de passe">
                    <p>Confirmez votre mot de passe</p>
                    <input class="motdepasse" id="mdpconf" type="password" placeholder="Confirmez votre mot de passe">

                </div>

                {% form_theme form 'bootstrap_3_horizontal_layout.html.twig' %}
                {{form(form)}}


                <script src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.4/jquery.min.js"></script>
                <script src="../script/verifprofil.js"></script>
            {%endblock%}
