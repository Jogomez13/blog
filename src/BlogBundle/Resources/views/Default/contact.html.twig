{% extends "BlogBundle:Default:accueil.html.twig" %}	
{% block body %}
 <body>
    <div class="container">
        <img src="{{ asset('../web/bundles/img/contactez.png') }}" />
        <div>
                 
        <form id="contact" action="" method=""  class="form form--login"> 
          <div><h1>Contactez-nous<h1></div>   
            <div>  
                <label for="name"> Nom : </label>
                <input type="text" id="name" class="textconnection col-xs-offset-1"/>
            </div>
            <div>  
                <label for="email"> E-mail : </label>
                <input type="email" id="email" class="textconnection col-xs-offset-1"/>
            </div>
            <div>  
                <label for="subject"> Sujet : </label>
                <input type="text" id="subject" class="textconnection col-xs-offset-1"/>
            </div>
            <div> 
                <label for="message"> Message : </label>
                <input type="text" id="message" class="textconnection col-xs-offset-1"/>
            </div>
    
            <div class="action">  
                <button type="submit" class="btn-login">Envoyer</button>
            </div>
        </form>   
    </div>
</body>
{% endblock %}
