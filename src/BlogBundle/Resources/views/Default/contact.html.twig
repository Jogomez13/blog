{% extends "BlogBundle:Default:accueil.html.twig" %}	
{% block body %}
 <body>
    <div class="container">
        <img src="https://cdn1.iconfinder.com/data/icons/learning-and-entertainment-flat-icons/512/taol.png">
        <div><h1>Contactez-nous<h1></div>             
        <form id="contact" action="" method=""  class="form form--login">
            <div>  
                <label for="name"> Nom : </label>
                <input type="text" id="name" class="textconnection"/>
            </div>
            <div>  
                <label for="email"> E-mail : </label>
                <input type="email" id="email" class="textconnection"/>
            </div>
            <div>  
                <label for="subject"> Sujet : </label>
                <input type="text" id="subject" class="textconnection"/>
            </div>
            <div> 
                <label for="message"> Message : </label>
                <input type="text" id="message" class="textconnection"/>
            </div>
    
            <div class="action">  
                <button type="submit" class="btn-login">Envoyer</button>
            </div>
        </form>   
    </div>
</body>
{% endblock %}
